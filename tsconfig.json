{
    "compilerOptions": {
        "outDir": ".build/",
        "jsx": "react-jsx",
        "module": "ESNext",
        "target": "ES2015", // Set to ES5 for older browser support.
        "strict": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "lib": ["dom", "dom.iterable", "esnext"],
        "paths": {
            "@/blocks/*": ["./src/blocks/*"],
            "@/components/*": ["./src/components/*"],
            "@/scripts/*": ["./src/scripts/*"]
        }
    }
}
